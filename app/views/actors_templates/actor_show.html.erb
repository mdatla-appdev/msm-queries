<h1>Actor #<%= @the_actor.id %> details </h1>
 

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
  <%= @the_actor.name %>
  </dd>

  <dt>
    DOB
  </dt>
  <dd>
   <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
   <%= @the_actor.bio %>
  </dd>



  <dt>
    Image
  </dt>
  <dd>

    <img src="http://robohash.org/<%= @the_actor.name %>">

  </dd>



  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
   <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>

</dl>


<h2>Filmography</h2>

<table border="1">
<% @character.each do |a_character| %>
  <tr>
   <td>
  <% c = Character.where({ :movie_id => a_character.movie_id}).at(0) %>

  <% m_id = c.movie_id %>   

  <% m = Movie.where({ :id => m_id}).at(0) %>

  <% d_id = m.director_id %>

  <% d = Director.where({ :id => d_id}).at(0) %>


  <%= d.name %>

    </td>  



   <td>
    <%= a_character.name %>
    </td>    
    
    
  
    
 
    
 </tr>
<% end %>
