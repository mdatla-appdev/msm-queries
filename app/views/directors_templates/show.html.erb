 <h1>
  Director #<%= @the_director.id %> details
</h1>

<a href="/directors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_director/<%= @the_director.id %>" class="btn btn-block btn-outline-secondary">
  Delete director
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
  <%= @the_director.name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
   <%= @the_director.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
      <%= @the_director.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    h<%= @the_director.image %>>
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_director.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
   <%= time_ago_in_words(@the_director.updated_at) %> ago
  </dd>
</dl>

<h2>Filmography</h2>

<table border="1">
<% @filmography.each do |a_film| %>
  <tr>
    <td>
    <%= a_film.id %>
    </td>
    
    <td>
    <img src="http://robohash.org/<%= a_film.image %>?set=set4">
    </td>    
  
    <td>
    <%= a_film.title %>
    </td>    
    
    <td>
    <%= a_film.year %>
    </td>
    
    <td>
    <%= @the_director.name %>
    </td>
  </tr>
    <td>
    <a href="/movies/<%= a_film.id %>" >
    Show Details
    </td>

<% end %>

</table>
